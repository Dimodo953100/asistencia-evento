<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Lista de invitados</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light p-4">
  <div class="container">
    <h1 class="mb-4">Lista de invitados</h1>
    <table class="table table-bordered table-hover">
      <thead class="table-success">
        <tr>
          <th>Nombre</th>
          <th>Cédula</th>
          <th>Email</th>
          <th>Asistencia</th>
        </tr>
      </thead>
      <tbody>
        <% invitados.forEach(inv => { %>
          <tr>
            <td><%= inv.nombre %></td>
            <td><%= inv.cedula %></td>
            <td><%= inv.email %></td>
            <td class="fw-bold <%= inv.asistio ? 'text-success' : 'text-danger' %>">
              <%= inv.asistio ? '✅ Asistió' : '❌ No asistió' %>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
